<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hall of Fame</title>
    <%- include('../partials/_favicon') %>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/main.css">
</head>

<body class="d-flex flex-column min-vh-100">

    <main class="flex-shrink-0">
        <%- include('../partials/_navbar') %>

        <div class="container mt-5">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1>Hall of Fame</h1>
                <a href="/hall-of-fame/new" class="btn btn-primary">Add New Entry</a>
            </div>

            <div class="row">
                <% hallOfFame.forEach(entry => { %>
                <div class="col-md-4">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title"><%= entry.gebeurtenis %></h5>
                            <p class="card-text">Activity: <%= entry.deActiviteit %></p>
                            <p class="card-text">Order: <%= entry.order %></p>
                            <p class="card-text">User: <a
                                    href="/profile/<%= entry.User.id %>"><%= entry.User.name %></a></p>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </main>

    <%- include('../partials/_footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>