<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Open BAK Validation Requests</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
</head>

<body>
    <%- include('partials/_navbar') %>

        <div class="container mt-5">

            <div class="d-flex justify-content-between align-items-center mb-3">
                <h1>Getrokken Bakken</h1>
                <a href="/validationRequests/create" class="btn btn-primary">Getrokken Bak Aanvragen</a>
            </div>

            <!-- Nav tabs -->
            <ul class="nav nav-tabs" id="validationRequestTabs" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link active" id="active-requests-tab" data-bs-toggle="tab"
                        data-bs-target="#active-requests" type="button" role="tab" aria-controls="active-requests"
                        aria-selected="true">Active Requests</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="closed-requests-tab" data-bs-toggle="tab"
                        data-bs-target="#closed-requests" type="button" role="tab" aria-controls="closed-requests"
                        aria-selected="false">Closed Requests</button>
                </li>
            </ul>

            <!-- Tab panes -->
            <div class="tab-content mt-3" id="validationRequestTabsContent">
                <div class="tab-pane fade show active" id="active-requests" role="tabpanel"
                    aria-labelledby="active-requests-tab">
                    <h2>Active BAK Validation Requests</h2>
                    <% openRequests.forEach(request=> { %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <p>Requested by <a href="/profile/<%= request.Requester.id %>">
                                        <%= request.Requester.name %>
                                    </a>
                                    for <a href="/profile/<%= request.Target.id %>">
                                        <%= request.Target.name %>
                                    </a></p>
                                <p>Evidence: <a href="/uploads/prove/<%= request.evidenceUrl %>"
                                        target="_blank">View</a></p>
                                <p>Status: <%= request.status %>
                                </p>

                                <p>Approvers:

                                    <% if (request.FirstApprover ) { %>
                                        <p>First Approver:
                                            <a href="/profile/<%= request.FirstApprover.id %>">
                                                <%= request.FirstApprover.name %>
                                            </a>,

                                        </p>
                                        <% } %>

                                            <% if (request.SecondApprover) { %>
                                                <p>Second Approver:
                                                    <a href="/profile/<%= request.SecondApprover.id %>">
                                                        <%= request.SecondApprover.name %>
                                                    </a>

                                                </p>
                                                <% } %>


                                                    <% if (!request.FirstApprover && !request.SecondApprover) { %>
                                                        <p>No approvers yet.</p>
                                                        <% } %>
                                </p>

                                <!-- Approve and Decline Buttons -->
                                <% if (user.isAdmin || (!user.isAdmin && user.id !==request.requesterId)) { %>
                                    <button onclick="location.href='/validateBak/approve/<%= request.id %>'"
                                        class="btn btn-success">Approve</button>
                                    <% } %>
                                        <% if (user.isAdmin) { %>
                                            <button onclick="location.href='/validateBak/decline/<%= request.id %>'"
                                                class="btn btn-danger">Decline</button>
                                            <% } %>
                            </div>
                        </div>
                        <% }) %>
                </div>
                <div class="tab-pane fade" id="closed-requests" role="tabpanel" aria-labelledby="closed-requests-tab">
                    <!-- Declined Requests Section -->
                    <h2>Declined BAK Validation Requests</h2>
                    <% declinedRequests.forEach(request=> { %>
                        <div class="card mb-3">
                            <div class="card-body">
                                <p>Requested by <a href="/profile/<%= request.Requester.id %>">
                                        <%= request.Requester.name %>
                                    </a>
                                    for <a href="/profile/<%= request.Target.id %>">
                                        <%= request.Target.name %>
                                    </a></p>
                                <p>Evidence: <a href="<%= request.evidenceUrl %>" target="_blank">View</a></p>
                                <p>Status: <%= request.status %>
                                </p>
                                <p>Declined:
                                    <a href="/profile/<%= request.DeclinedBy.id %>">
                                        <%= request.DeclinedBy.name %>
                                    </a>

                                </p>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </div>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>