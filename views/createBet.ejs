<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create Bet</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
</head>

<body>

    <%- include('partials/_navbar') %>

        <div class="container mt-5">
            <h2>Create a New Bet</h2>
            <form action="/bets/create" method="POST">

                <!-- Hidden field for the initiatorUserId -->
                <input type="hidden" id="initiatorUserId" name="initiatorUserId" value="<%= user.id %>"
                    class="form-control">

                <div class="mb-3">
                    <label for="opponentUserId" class="form-label">Opponent:</label>
                    <select id="opponentUserId" name="opponentUserId" class="form-select">
                        <% users.forEach(user=> { %>
                            <option value="<%= user.id %>">
                                <%= user.name %>
                            </option>
                            <% }) %>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="judgeUserId" class="form-label">Judge:</label>
                    <select id="judgeUserId" name="judgeUserId" class="form-select">
                        <% users.forEach(user=> { %>
                            <option value="<%= user.id %>">
                                <%= user.name %>
                            </option>
                            <% }) %>
                    </select>
                </div>


                <div class="mb-3">
                    <label for="betTitle" class="form-label">Bet Title:</label>
                    <input type="text" id="betTitle" name="betTitle" class="form-control" required></textarea>
                </div>

                <div class="mb-3">
                    <label for="betDescription" class="form-label">Bet Description:</label>
                    <textarea id="betDescription" name="betDescription" class="form-control" rows="3"
                        required></textarea>
                </div>

                <div class="mb-3">
                    <label for="stake" class="form-label">Stake (in REP points):</label>
                    <input type="number" id="stake" name="stake" class="form-control" required>
                </div>

                <button type="submit" class="btn btn-primary">Create Bet</button>
            </form>
        </div>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>