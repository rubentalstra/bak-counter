<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create BAK Validation Request</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
</head>

<body>

    <%- include('partials/_navbar') %>

    <div class="container mt-5">
        <h2>Create a New BAK Validation Request</h2>
        <form action="/validationRequests/create" method="POST" enctype="multipart/form-data">

            <div class="mb-3">
                <label for="targetUserId" class="form-label">Persoon die Bak heeft getrokken:</label>
                <select id="targetUserId" name="targetUserId" class="form-select">
                    <% users.forEach(user=> { %>
                    <option value="<%= user.id %>">
                        <%= user.name %>
                    </option>
                    <% }) %>
                </select>
            </div>

            <div class="mb-3">
                <label for="evidence" class="form-label">Evidence (Image or Video):</label>
                <input type="file" id="evidence" name="evidence" class="form-control" accept="image/*,video/*" required>
            </div>


            <button type="submit" class="btn btn-primary">Submit Request</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>