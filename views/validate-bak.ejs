<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Validate BAK Requests</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
</head>

<body>
    <%- include('partials/_navbar') %>

        <div class="container mt-5">
            <h2>Pending BAK Requests</h2>
            <% if (bakRequests.length> 0) { %>
                <div class="list-group">
                    <% bakRequests.forEach(function(request) { %>
                        <div
                            class="list-group-item list-group-item-action d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1">
                                    <%= request.reasonBak %>
                                </h5>
                                <small>From: <%= request.Requester.name %></small>
                            </div>
                            <div>
                                <button class="btn btn-success btn-sm"
                                    onclick="handleResponse('<%= request.id %>', 'approved')">Accept</button>
                                <button class="btn btn-danger btn-sm"
                                    onclick="handleResponse('<%= request.id %>', 'declined')">Decline</button>
                            </div>
                        </div>
                        <% }); %>
                </div>
                <% } else { %>
                    <p>No pending BAK requests.</p>
                    <% } %>
        </div>

        <script>
            function handleResponse(requestId, status) {
                fetch('/bak-request/' + requestId + '/' + status, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        // Include CSRF token as needed
                    },
                    body: JSON.stringify({ status: status })
                }).then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert('Failed to update BAK request.');
                    }
                });
            }
        </script>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>