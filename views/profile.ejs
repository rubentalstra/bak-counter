<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Profile</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
    <!-- Custom Styles -->
    <style>
        .profile-header {
            background: #f7f7f7;
            padding: 20px;
            border-radius: 8px;
            margin-bottom: 20px;
        }

        .achievement-bar,
        .rep-bar {
            height: 20px;
        }
    </style>
</head>

<body>
    <%- include('partials/_navbar') %>

        <div class="container mt-5">
            <div class="profile-header">
                <div class="row align-items-center">
                    <div class="col-md-2">
                        <img src="<%= user.profilePicture %>" alt="Profile Picture" class="img-fluid rounded-circle">
                    </div>
                    <div class="col-md-10">
                        <h2>
                            <%= user.name %>'s Profile
                        </h2>
                        <p>
                            <%= user.profileDescription %>
                        </p>
                    </div>
                </div>
            </div>
            <div class="card">
                <div class="card-body">
                    <!-- XP and REP Section -->
                    <div class="mb-3">
                        <h4>Progress</h4>
                        <label for="xpProgressBar">XP: <%= user.xp %> / <%= nextXPLevel ? nextXPLevel : 'Max Level' %>
                        </label>
                        <div class="progress mb-2">
                            <div class="progress-bar achievement-bar" role="progressbar"
                                style="width: <%= xpPercentage %>%" aria-valuenow="<%= user.xp %>" aria-valuemin="0"
                                aria-valuemax="<%= nextXPLevel ? nextXPLevel : 100 %>"></div>
                        </div>
                        <label for="repProgressBar">REP: <%= user.rep %> / <%= nextRepTier ? nextRepTier : 'Max Tier' %>
                        </label>
                        <div class="progress">
                            <div class="progress-bar rep-bar bg-success" role="progressbar"
                                style="width: <%= repPercentage %>%" aria-valuenow="<%= user.rep %>" aria-valuemin="0"
                                aria-valuemax="<%= nextRepTier ? nextRepTier : 100 %>"></div>
                        </div>
                    </div>
                    <!-- Level and Reputation Section -->
                    <div class="mb-3">
                        <h4>Levels & Reputation</h4>
                        <p>Level: <%= level %>
                        </p>
                        <p>Reputation: <%= reputation %>
                        </p>
                    </div>
                    <!-- Record Counter Section -->
                    <div class="mb-3">
                        <h4>Record Counter</h4>
                        <p>Bakken in x aantal uur: <%= user.recordCounter %>
                        </p>
                    </div>
                    <!-- Event Log Section -->
                    <div class="mb-3">
                        <h4>Event Log</h4>
                        <ul>
                            <% user.eventLogs.forEach(event=> { %>
                                <li>
                                    <%= event.description %> - <%= event.timestamp %>
                                </li>
                                <% }); %>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bootstrap JS -->
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>